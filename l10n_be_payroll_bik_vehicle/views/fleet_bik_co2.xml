<odoo>

    <record id='fleet_bik_co2_configuration_view_tree' model='ir.ui.view'>
        <field name="name">fleet.bik.co2.tree</field>
        <field name="model">fleet.bik.co2</field>
        <field name="arch" type="xml">
            <tree name="co2_reference" editable="bottom">
                <field name="year" />
                <field name="fiscal_fuel_type" string="Fuel Type" />
                <field name="ref_co2" />

            </tree>
        </field>
    </record>

    <record id="view_account_move_line_filter" model="ir.ui.view">
            <field name="name">fleet.bik.co2.search</field>
            <field name="model">fleet.bik.co2</field>
            <field name="arch" type="xml">
                <search string="Search CO2 Reference">
                    <group expand="0" string="Group By">
                        <filter
                        name="group_year"
                        string="Year"
                        icon="terp-partner"
                        context="{'group_by':'year'}"
                    />
                        <filter
                        name="group_fiscal_fuel_type"
                        string="Fuel Type"
                        icon="terp-partner"
                        context="{'group_by':'fiscal_fuel_type'}"
                    />
                    </group>
                </search>
            </field>
        </record>

</odoo>
