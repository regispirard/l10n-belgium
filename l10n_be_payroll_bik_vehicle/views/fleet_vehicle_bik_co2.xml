<odoo>

    <record id='fleet_bik_co2_configuration_view_tree' model='ir.ui.view'>
        <field name="name">fleet.vehicle.bik.co2.tree</field>
        <field name="model">fleet.vehicle.bik.co2</field>
        <field name="arch" type="xml">
            <tree name="co2_reference" editable="bottom">
                <field name="year" />
                <field name="fiscal_fuel_type" string="Fuel Type" />
                <field name="ref_co2" />
            </tree>
        </field>
    </record>

    <record id='fleet_bik_co2_configuration_action' model='ir.actions.act_window'>
        <field name="name">Reference CO2</field>
        <field name="res_model">fleet.vehicle.bik.co2</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem
        name="Belgium Fiscality"
        parent="fleet.fleet_configuration"
        id="fleet_bik_be"
        sequence="70"
        groups="fleet.fleet_group_manager"
    />
    <menuitem
        action="fleet_bik_co2_configuration_action"
        parent="fleet_bik_be"
        id="fleet_bik_co2_configuration_menu"
        sequence="1"
    />

</odoo>
