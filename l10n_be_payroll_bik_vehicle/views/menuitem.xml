<odoo>

    <!-- Base menu -->

    <menuitem
        name="Belgium Fiscality"
        parent="fleet.fleet_configuration"
        id="fleet_bik_be"
        sequence="70"
        groups="fleet.fleet_group_manager,payroll.group_payroll_manager"
    />

    <menuitem
        name="Belgium Fiscality"
        parent="payroll.payroll_menu_configuration"
        id="fleet_bik_be_payroll"
        sequence="70"
        groups="fleet.fleet_group_manager,payroll.group_payroll_manager"
    />

    <!-- Benefit in kind Vehicle - CO2 Reference table -->

    <record id='fleet_bik_co2_configuration_action' model='ir.actions.act_window'>
        <field name="name">Reference CO2</field>
        <field name="res_model">fleet.bik.co2</field>
        <field name="view_mode">tree</field>
        <field name="context">{'search_default_group_year': 1}</field>
    </record>

    <menuitem
        action="fleet_bik_co2_configuration_action"
        parent="fleet_bik_be"
        id="fleet_bik_co2_configuration_menu"
        sequence="1"
    />

    <menuitem
        action="fleet_bik_co2_configuration_action"
        parent="fleet_bik_be_payroll"
        id="fleet_bik_co2_configuration_payroll_menu"
        sequence="1"
    />

    <!-- Benefit in kind Vehicle - Degressive percentage -->

    <record
        id='fleet_bik_degressive_configuration_action'
        model='ir.actions.act_window'
    >
        <field name="name">Vehicle Degressive Percentage</field>
        <field name="res_model">fleet.bik.degressive</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem
        action="fleet_bik_degressive_configuration_action"
        parent="fleet_bik_be"
        id="fleet_bik_degressive_configuration_menu"
        sequence="2"
    />

    <menuitem
        action="fleet_bik_degressive_configuration_action"
        parent="fleet_bik_be_payroll"
        id="fleet_bik_degressive_configuration_payroll_menu"
        sequence="2"
    />

    <!-- Benefit in kind Vehicle - Minimal BIK Amount -->

    <record id='fleet_bik_min_configuration_action' model='ir.actions.act_window'>
        <field name="name">Vehicle BIK minimal amount</field>
        <field name="res_model">fleet.bik.min</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem
        action="fleet_bik_min_configuration_action"
        parent="fleet_bik_be"
        id="fleet_bik_min_configuration_menu"
        sequence="3"
    />

    <menuitem
        action="fleet_bik_min_configuration_action"
        parent="fleet_bik_be_payroll"
        id="fleet_bik_min_configuration_payroll_menu"
        sequence="3"
    />

</odoo>
