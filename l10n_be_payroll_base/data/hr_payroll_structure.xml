  <!-- Salary Rules templates -->

  <record id="l10n_be_rule_salary" model="hr.salary.rule.template">
    <field name="name">Salary</field>
    <field name="category_id" ref="l10n_be_category_remuneration" />
    <field name="code">SALARY</field>
    <field name="sequence" eval="100" />
    <field name="active">True</field>
    <field name="appears_on_payslip">True</field>
    <field name="note">Monthly salary (wage) defined by the contract</field>
    <field name="condition_select">none</field>
    <field name="amount_select">code</field>
    <field name="amount_python_compute">result = contract.wage</field>
  </record>

  <record id="l10n_be_rule_bik" model="hr.salary.rule.template">
    <field name="name">Benefit in kind (other)</field>
    <field name="category_id" ref="l10n_be_category_remuneration" />
    <field name="code">BIK</field>
    <field name="sequence" eval="200" />
    <field name="active">True</field>
    <field name="appears_on_payslip">True</field>
    <field name="note">Benefit in kind - amount</field>
    <field name="condition_select">none</field>
    <field name="amount_select">code</field>
    <field name="amount_python_compute">result = contract.bik_be</field>
  </record>

  <record id="l10n_be_rule_subject_social_security" model="hr.salary.rule.template">
    <field name="name">Subject to social security</field>
    <field name="category_id" ref="l10n_be_category_suject_social_security" />
    <field name="code">SOUMIS_ONSS</field>
    <field name="sequence" eval="500" />
    <field name="active">True</field>
    <field name="appears_on_payslip">True</field>
    <field name="note">Total amount subject to social security contribution</field>
    <field name="condition_select">none</field>
    <field name="amount_select">code</field>
    <field
            name="amount_python_compute"
        >result = categories.REMUN + categories.BIK</field>
  </record>


<!-- Salary Structure templates -->

  <record id="structure_l10n_be_payroll_base_1" model="hr.payroll.structure.template">
    <field name="code">BELGIUM</field>
    <field name="name">Belgium: Belgian payroll structure</field>
    <field
            name="rule_ids"
            eval="[(6, 0, [
            ref('l10n_be_rule_salary'),
            ref('l10n_be_rule_bik'),
            ref('l10n_be_rule_subject_social_security')
            ])]"
        />
  </record>

