<odoo>

    <record id="hr_payslip_view_form" model="ir.ui.view">
        <field name="name">hr.payslip.form (in l10n_be_payroll_base)</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="payroll_details.hr_payslip_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='payslip_details']" position="inside">
                <group col="2" name="l10n_be_group1">
                    <group col="1" name="l10n_be_position_col1">
                        <group string="Social Security (ONSS)">
                            <field name="onssbe_type" />
                        </group>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
