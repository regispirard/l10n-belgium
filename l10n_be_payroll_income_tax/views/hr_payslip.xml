<odoo>

    <record id="hr_payslip_view_form" model="ir.ui.view">
        <field name="name">hr.payslip.form (in l10_be_payroll_income_tax)</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="payroll_details.hr_payslip_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='payslip_details']" position="inside">
                <separator name="tax_income" string="Tax Income Data" />
                <group>
                    <field name="taxbe_type" />
                    <field name="taxbe_children" />
                    <field name="taxbe_isolated" />
                    <field name="taxbe_isolated_par" />
                    <field name="taxbe_handicap" />
                    <field name="taxbe_65_dependant" />
                    <field name="taxbe_65" />
                    <field name="taxbe_other" />
                    <field name="taxbe_spouse_without_rev" />
                    <field name="taxbe_spouse_low_rev" />
                    <field name="taxbe_spouse_low_pens" />
                </group>
            </xpath>
        </field>
    </record>

</odoo>
